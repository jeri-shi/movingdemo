<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="WARN" monitorInterval="5">
	<Appenders>
		<Console name="Console" target="SYSTEM_OUT">
			<PatternLayout pattern="%d{DEFAULT} [%t] %-5level %logger{36}:%L - %msg%n" />
		</Console>
		<Console name="SpringBoot" target="SYSTEM_OUT">
			<PatternLayout
				pattern="%d{DEFAULT} %highlight{%5level}{TRACE=Magenta} [%21t] %-50c{1}: %highlight{%msg}{TRACE=Magenta}%n" />
		</Console>
	</Appenders>
	<Loggers>
		<Logger name="com.shijin.learn" level="trace" additivity="false">
			<AppenderRef ref="SpringBoot" />
		</Logger>
		<Logger name="org.springframework.security.web.session.HttpSessionEventPublisher" level="debug" additivity="false">
			<AppenderRef ref="SpringBoot" />
		</Logger>
		<Root level="error">
			<AppenderRef ref="Console" />
		</Root>
	</Loggers>
</Configuration>