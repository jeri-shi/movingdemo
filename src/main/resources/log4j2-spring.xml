<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="WARN" monitorInterval="5">
	<category name="org.springframework.security">
		<priority value="debug" />
	</category>
	<Appenders>
		<Console name="Console" target="SYSTEM_OUT">
			<PatternLayout pattern="%d{DEFAULT} [%t] %-5level %logger{36}:%L - %msg%n" />
		</Console>
		<Console name="AppConsole" target="SYSTEM_OUT">
			<PatternLayout
				pattern="%highlight{%d{DEFAULT} %5level [%21.21t]}{TRACE=Magenta} %-56c{1}: %highlight{%msg}{TRACE=Magenta}%n" />
		</Console>
		<Console name="SpringConsole" target="SYSTEM_OUT">
			<PatternLayout
				pattern="%highlight{%d{DEFAULT} %5level [%21.21t] %-56.56c{1.}: %msg}{TRACE=Magenta}%n" />
		</Console>
		<File name="FileOutput" filename="demo_hystrix.log" append="false">
			<PatternLayout
				pattern="%d{DEFAULT} %5level [%21.21t] %-56.56c{1.}: %msg%n" />
		</File>
	</Appenders>
	<Loggers>
		<Logger name="com.shijin.learn" level="trace" additivity="false">
			<AppenderRef ref="AppConsole" />
			<AppenderRef ref="FileOutput" />
		</Logger>
		<Logger name="org.springframework.security" level="debug"
			additivity="false">
			<AppenderRef ref="SpringConsole" />
			<AppenderRef ref="FileOutput" />
		</Logger>
		<Logger name="org.springframework.security.oauth2" level="debug"
			additivity="false">
			<AppenderRef ref="SpringConsole" />
			<AppenderRef ref="FileOutput" />
		</Logger>
		<Logger name="com.netflix.hystrix" level="debug"
			additivity="false">
			<AppenderRef ref="SpringConsole" />
			<AppenderRef ref="FileOutput" />
		</Logger>
		<Logger name="org.springframework.security.web.util" level="info">
			<AppenderRef ref="SpringConsole" />
		</Logger>
		<Root level="error">
			<AppenderRef ref="Console" />
			<AppenderRef ref="FileOutput" />
		</Root>
	</Loggers>
</Configuration>